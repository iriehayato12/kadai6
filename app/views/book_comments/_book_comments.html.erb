 　　<table>
 　　　    <% book.book_comments.each do |book_comment| %>
 　  　　 <tr>
        <td><%= image_tag book_comment.user.get_profile_image, size:'100x100' %>
            <br><%= link_to (book_comment.user) do %>
                <%= book_comment.user.name %>
                <% end %>
            </br>
        </td>
        <td><%= book_comment.comment %></td>
        <td><% if user_signed_in? && current_user.id == book_comment.user_id %>
            <%= link_to "Destroy",book_book_comment_path(book,book_comment), method: :delete ,remote: true,data: {confirm:"本当に消しますか？"},class:"btn btn-danger bta-sm" %>
            <% end %>
        </td>
       </tr>
      <% end %>
     </table>
      
      