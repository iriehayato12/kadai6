<table class="table">
 <% if @range =="User" %>
 <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="1"></th>
 </tr>
 <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user %></td>
    </tr>
    <% end %>
 </tbody>
 <% else %>
 <tbody>
     <tr>
         <th colspan="1"></th>
         <th>Title</th>
         <th>Opinion</th>
     </tr>
     <% @books.each do |book| %>
     <tr>
         <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
         <td>
             <%= link_to book_path(book.id) do %>
             <%= book.title %>
             <% end %>
         </td>
         <td><%= book.body %></td>
     </tr>
 </tbody>
     <% end %>
 <% end %>
</table>